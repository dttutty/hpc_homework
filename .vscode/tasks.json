{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-fopenmp",
                "-ggdb",
                "-pedantic-errors",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",  // 调用 make 命令
            "args": [
                "${input:_BENCHMARKs}",
                "CLASS=${input:_VERSIONs}"
            ],         // 如果需要，可以在这里添加 make 的参数
            "options": {
                "cwd": "${workspaceFolder}/hw1/NPB",  // 设置工作目录为 NPB 目录
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ],
    "inputs": [
        {
            "id": "_VERSIONs",        // 定义输入 ID
            "type": "pickString",      // 使用下拉选择框
            "description": "Select _VERSIONs", // 提示用户选择
            "options": [               // 预定义选项
                "S","W","A","B","C","D","E","F"
            ],
            "default": "S"           // 默认选项
        },
        {
            "id": "_BENCHMARKs",        // 定义输入 ID
            "type": "pickString",      // 使用下拉选择框
            "description": "Select _BENCHMARKs", // 提示用户选择
            "options": [               // 预定义选项
                "EP","CG","MG","IS","FT"
            ],
            "default": "CG"           // 默认选项
        }
    ],
    "version": "2.0.0"
}
